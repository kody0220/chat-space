.side-bar
  .side-bar__user-name
    .side-bar__user-name__box
      .side-bar__user-name__box__name
        = current_user.name
      .ul.side-bar__user-name__box__icon
        =link_to new_group_path(), class: "group-create" do
          %i.fas.fa-edit
        =link_to edit_user_path(current_user), class: "edit-account" do
          %i.fa.fa-cog
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group
        = link_to '#' do
          .side-bar__group-list__group__name
            = group.name
          .side-bar__group-list__group__message
            メッセージはありません
